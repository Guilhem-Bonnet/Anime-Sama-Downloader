[DEFAULT]
# Default save directory for downloaded videos
save_directory = ./videos

# Number of concurrent downloads (1-10)
max_concurrent_downloads = 3

# Use threaded .ts segment downloads by default
ts_threading = true

# Auto-convert .ts to .mp4 after download
auto_convert_mp4 = false

# Conversion tool (ffmpeg or moviepy)
conversion_tool = ffmpeg

[SITE]
# Override Anime-Sama base URL if the domain changes.
# Examples:
# base_url = https://anime-sama.si
# domain = anime-sama.si
base_url = https://anime-sama.si

[WEB]
# Host/port used by the web UI (`python main.py --ui web`).
# In Docker, you generally want host = 0.0.0.0
host = 127.0.0.1
port = 8000

[OUTPUT]
# Output naming/layout.
# - legacy (default): <root>/<slug>/Saison <n>/<lang>/<slug>-S<n>E<ep>.mp4
# - media (Jellyfin/Plex friendly): <root>/<Series>/Season 01/<Series> - S01E01.mp4
naming_mode = legacy

# If true, in media mode creates one series folder per language:
#   "My Show [VOSTFR]" and "My Show [VF]"
media_separate_lang = false

[MEDIA_REFRESH]
# Auto refresh Jellyfin/Plex libraries after successful downloads.
# Default: auto-enable only when Jellyfin/Plex credentials are configured.
enabled = true

# Debounce (seconds). Multiple episode finishes will be coalesced.
debounce_seconds = 20

[JELLYFIN]
# Example: http://jellyfin:8096 (Docker) or http://127.0.0.1:8096
url =
api_key =

[PLEX]
# Example: http://plex:32400
url =
token =
# Library section id (integer as string) to refresh.
section_id =

[NETWORK]
# Request timeout in seconds
timeout = 15

# Maximum retries for failed requests
max_retries = 3

# Connection pool size
pool_size = 20

[ADVANCED]
# Enable HTTP response caching
enable_cache = true

# Maximum cache size (number of responses)
max_cache_size = 100

# Show tutorial on startup
show_tutorial = false
